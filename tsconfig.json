{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "declaration": true,
    "strict": true,
    "jsx": "react-native",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "lib": ["es6"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "src",
    "types": ["react-native", "jest", "node", "@testing-library/jest-native"]
  },
  "include": ["src"],
  "exclude": ["dist"]
}
